alias cls="clear"
alias tree="exa --icons --tree -L 1 -I node_modules"
alias ll="exa --icons -lah"
alias ls="exa --icons"
alias grep="grep --color"
alias cat="bat"
alias gitlog="git --no-pager log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all"
alias gitstatus=" git --no-pager status"
